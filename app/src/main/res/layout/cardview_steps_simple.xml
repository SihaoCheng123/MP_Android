<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/md_theme_detailed_recipe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/md_theme_outline_add_recipe"
        android:background="@drawable/round_category_grey">
        
        <TextView
            android:id="@+id/numberStepCardViewDR"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/round_user_profile"
            android:backgroundTint="@color/md_theme_primary"
            android:layout_margin="24dp"
            android:text="1"
            android:textColor="@color/md_theme_onPrimary"
            android:gravity="center"/>

        <TextView
            android:id="@+id/stepDescriptionCardViewDR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum jdasdasdassdsdadfasdfasdfa"
            android:fontFamily="@font/poppins_medium"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:layout_marginEnd="30dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
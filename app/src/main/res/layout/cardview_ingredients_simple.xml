<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/md_theme_detailed_recipe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/md_theme_outline_add_recipe"
        android:background="@drawable/round_category_grey">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageIngredientCardViewDR"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round_card_primary"
                android:layout_marginVertical="12dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/ingredient_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/ingredientNameSimpleCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ingredients"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/imageIngredientCardViewDR"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <CheckBox
                android:buttonTint="@color/md_theme_outline_add_recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.HomeScreen"
        android:background="@color/md_theme_tertiaryContainer">

        <TextView
            android:id="@+id/saludo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/hello_user"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="50dp"
            android:layout_marginStart="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/calendarContainerHS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/saludo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/menuText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's menu"
            android:fontFamily="@font/poppins_regular"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/calendarContainerHS"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"
            android:layout_marginTop="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/menuText"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/breakfast"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/card_breakfast"
                    android:layout_width="300dp"
                    android:layout_height="96dp"
                    android:background="@drawable/round_card_white"
                    android:text="@string/add_meal_text"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:elevation="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lunch"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/card_lunch"
                    android:layout_width="300dp"
                    android:layout_height="96dp"
                    android:background="@drawable/round_card_secondary"
                    android:text="@string/add_meal_text"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/md_theme_onPrimary"
                    android:elevation="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dinner"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/card_dinner"
                    android:layout_width="300dp"
                    android:layout_height="96dp"
                    android:background="@drawable/round_card_primary"
                    android:textColor="@color/md_theme_onPrimary"
                    android:text="@string/add_meal_text"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:elevation="1dp" />
            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>